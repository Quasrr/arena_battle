datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
generator client {
  provider = "prisma-client"
  output   = "./generated/"
}

model User {
  id            Int    @id @default(autoincrement())
  username      String @unique
  password      String
  currentBattle String?

  battles       BattleParticipant[]

  @@map("user")
}

model Battle {
  battleId     String @id
  state        String
  turn         Int
  data         String

  participants BattleParticipant[]

  @@map("battle")
}

model BattleParticipant {
  userId   Int
  battleId String

  user   User   @relation(fields: [userId], references: [id])
  battle Battle @relation(fields: [battleId], references: [battleId])

  @@id([userId, battleId])
  @@map("battle_participant")
}